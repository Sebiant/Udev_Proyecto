CREATE TABLE instituciones (
  id_institucion BIGINT PRIMARY KEY,
  nombre VARCHAR(25),
  direccion VARCHAR(100),
  estado TINYINT DEFAULT 1
);

CREATE TABLE salones (
  id_salon INT PRIMARY KEY,
  nombre_salon VARCHAR(25),
  capacidad INT,
  descripcion VARCHAR(100),
  id_institucion BIGINT,
  estado TINYINT DEFAULT 1,
  FOREIGN KEY (id_institucion) REFERENCES instituciones(id_institucion)
);

CREATE TABLE docentes (
  id_docente BIGINT PRIMARY KEY,
  tipo_documento VARCHAR(20),
  numero_documento VARCHAR(20),
  nombres VARCHAR(25),
  apellidos VARCHAR(25),
  especialidad VARCHAR(25),
  descripcion_especialidad VARCHAR(100),
  telefono VARCHAR(25),
  direccion VARCHAR(25),
  email VARCHAR(100),
  declara_renta TINYINT,
  retenedor_iva TINYINT,
  estado TINYINT DEFAULT 1
);

CREATE TABLE materias (
  id_materia INT PRIMARY KEY,
  nombre VARCHAR(25),
  descripcion VARCHAR(100),
  frecuencia VARCHAR(20),
  modalidad VARCHAR(20),
  estado TINYINT DEFAULT 1
);

CREATE TABLE programas (
  id_programa INT PRIMARY KEY,
  tipo VARCHAR(25),
  nombre VARCHAR(50),
  duracion_mes INT,
  cant_modulos INT,
  descripcion VARCHAR(100),
  estado TINYINT DEFAULT 1
);

CREATE TABLE modulos (
  id_modulo INT PRIMARY KEY,
  fecha_inicio DATE,
  fecha_fin DATE,
  id_programa INT,
  estado TINYINT DEFAULT 1,
  FOREIGN KEY (id_programa) REFERENCES programas(id_programa)
);

CREATE TABLE asignacion_a_modulo (
  id_asignacion INT PRIMARY KEY,
  id_modulo INT,
  id_materia INT,
  FOREIGN KEY (id_modulo) REFERENCES modulos(id_modulo),
  FOREIGN KEY (id_materia) REFERENCES materias(id_materia),
);

CREATE TABLE cuentas_cobro (
  id_cuenta INT PRIMARY KEY,
  fecha DATE,
  pago_excepcional TINYINT,
  valor_hora INT,
  horas_trabajadas INT,
  monto INT,
  id_docente BIGINT,
  FOREIGN KEY (id_docente) REFERENCES docentes(id_docente)
);

CREATE TABLE asistencias (
  id_asistencia INT PRIMARY KEY,
  fecha DATE,
  horas_trabajadas INT,
  id_docente BIGINT,
  FOREIGN KEY (id_docente) REFERENCES docentes(id_docente)
);

CREATE TABLE programador (
  id_programador INT PRIMARY KEY,
  fecha DATE,
  hora_inicio DATETIME,
  hora_salida DATETIME,
  id_salon INT,
  id_docente BIGINT,
  id_materia INT,
  FOREIGN KEY (id_salon) REFERENCES salones(id_salon),
  FOREIGN KEY (id_docente) REFERENCES docentes(id_docente),
  FOREIGN KEY (id_materia) REFERENCES materias(id_materia)
);